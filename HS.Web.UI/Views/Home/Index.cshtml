        function displayUsers(users) {
           var $tableBody = $('#usersTable tbody');
            $tableBody.empty();
            users.forEach(function (user) {
                $tableBody.append('<tr><td>' + user.id + '</td><td>' + user.userName + '</td></tr>');
            });
        }
        
    });
</script>